{% extends '_layouts/cp' %}
{% set fullPageForm = true %}
{% set docTitle = 'Setup'|t('mailchimp-commerce') %}
{% set title = 'Mailchimp Commerce'|t('mailchimp-commerce') %}

{% set buttonText = buttonText is defined ? buttonText : 'Next Step'|t('mailchimp-commerce') %}

{% block actionButton %}
	{% if next is defined %}
		{{ redirectInput(cpUrl('mailchimp-commerce/' ~ next)) }}
	{% endif %}

	{{ 'Step {current} of {total}'|t('mailchimp-commerce', {
		current: step,
		total: 2,
	}) }}
	&nbsp;
	<input type="submit" class="btn submit" value="{{ buttonText }}">
{% endblock %}