{% extends 'mailchimp-commerce-sync/_layout' %}
{% import '_includes/forms' as forms %}
{% set title = 'Sync'|t('mailchimp-commerce-sync') %}

{% block content %}
	<h2>
		{{ 'Store'|t('commerce') }}
	</h2>

	<p>
		{{
			'Manually sync the store if your domain or other details have changed.'|t(
				'mailchimp-commerce-sync'
			)
		}}
	</p>

	<form method="post">
		{{ csrfInput() }}
		<input type="hidden"
			name="action"
			value="mailchimp-commerce-sync/sync/store" />
		<input type="submit"
			class="btn submit"
			value="{{ 'Sync Store'|t('mailchimp-commerce-sync') }}" />
	</form>

	<hr />

	<div style="display: flex;justify-content: space-between">
		<h2>
			{{ 'Products'|t('commerce') }}
		</h2>
		<a href="{{ cpUrl('mailchimp-commerce-sync/synced/products') }}">
			{{ 'View Synced'|t('mailchimp-commerce-sync') }}
		</a>
	</div>

	<p>
		{{
			'{synced, plural, =1{1 product} other{# products}} have been synced.'|t(
				'mailchimp-commerce-sync',
				{
					synced: totalProductsSynced
				}
			)
		}}
	</p>

	{% for product in products %}
		<form method="post">
			{{ csrfInput() }}
			<input type="hidden"
				name="action"
				value="mailchimp-commerce-sync/sync/all-products" />
			<input type="hidden" name="class" value="{{ product.class }}" />
			{{
				forms.select({
					name: 'typeId',
					options: product.typeOptions
				})
			}}
			<input type="submit"
				class="btn submit"
				value="{{
				('Sync'|t('mailchimp-commerce-sync')) ~ ' '
					~ product.name
				}}" />
		</form>
		{% if not loop.last %}
			<br />
		{% endif %}
	{% endfor %}

	<hr />

	<h2>
		{{ 'Carts'|t('commerce') }}
	</h2>

	<p>
		{{
			'{synced} of {total, plural, =1{1 cart} other{# carts}} have been synced.'|t(
				'mailchimp-commerce-sync',
				{
					synced: totalCartsSynced,
					total: craft.orders.isCompleted(false).count()
				}
			)
		}}
	</p>
	<p>
		{{
			'Some carts may not appear to sync. This is due to them not having either an email or any line items.'|t(
				'mailchimp-commerce-sync'
			)
		}}
	</p>

	<form method="post">
		{{ csrfInput() }}
		<input type="hidden"
			name="action"
			value="mailchimp-commerce-sync/sync/all-carts" />
		<input type="submit"
			class="btn submit"
			value="{{ 'Sync All Carts'|t('mailchimp-commerce-sync') }}" />
	</form>

	<hr />

	<h2>
		{{ 'Orders'|t('commerce') }}
	</h2>

	<p>
		{{
			'{synced} of {total, plural, =1{1 order} other{# orders}} have been synced.'|t(
				'mailchimp-commerce-sync',
				{
					synced: totalOrdersSynced,
					total: craft.orders.isCompleted(true).count()
				}
			)
		}}
	</p>

	<form method="post">
		{{ csrfInput() }}
		<input type="hidden"
			name="action"
			value="mailchimp-commerce-sync/sync/all-orders" />
		<input type="submit"
			class="btn submit"
			value="{{ 'Sync All Orders'|t('mailchimp-commerce-sync') }}" />
	</form>

	<hr />

	<h2>
		{{ 'Customers'|t('commerce') }}
	</h2>

	<p class="light">
		<strong>Coming Soon</strong>. Customers are automatically synced with
		orders.
	</p>

	<hr />

	<h2>
		{{ 'Promotions'|t('commerce') }}
	</h2>

	<p>
		{{
			'{synced} of {total, plural, =1{1 promo} other{# promos}} have been synced.'|t(
				'mailchimp-commerce-sync',
				{
					synced: totalPromosSynced,
					total: totalDiscounts
				}
			)
		}}
	</p>

	<form method="post">
		{{ csrfInput() }}
		<input type="hidden"
			name="action"
			value="mailchimp-commerce-sync/sync/all-promos" />
		<input type="submit"
			class="btn submit"
			value="{{ 'Sync All Promos'|t('mailchimp-commerce-sync') }}" />
	</form>
{% endblock %}
